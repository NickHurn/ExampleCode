{% extends 'baseAdmin.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <span class="font08 font-italic">admin / {{ title|lower }}</span>
        <div class="card shadow mb-4 mt-2">
            <div class="card-header py-3">
                <div class="row">
                    <div class="col-12">
                        <h6 class="m-0 font-weight-bold text-primary">{{ title }}</h6>
                    </div>

                </div>
            </div>
            <div class="card-body">
                 <div class="col-md-12 col-12 pb-4 pl-3  ">
                     {% if errorMessage %}
                        <div class="col-md-12 col-12 pb-2 pl-3 pt-2 bg-gradient-danger text-white rounded">
                            <ul>
                                {% for em in errorMessage %}
                                    <li>{{ em }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                     {% if message %}
                         <div class="col-md-12 col-12 pb-2 pl-3 pt-2 bg-gradient-info text-white rounded">
                             <span>{{ message }}</span>
                         </div>
                     {% endif %}
                 </div>
                <!-- BODY DETAILS -->
                <div class="col-md-12 col-12 clientSection" id="details">
                    {{ form_start(form, {attr: { 'class':'form-inline' } } ) }}
                        {{ form_widget(form.id) }}
                        <div class="col-12 border-1-coOrange rounded ">
                            <div class="row">
                                <div class="col-12 pt-3 pb-3">
                                    <h4 class="coOrange">Company Details</h4>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.coName) }}
                                </div>
                                <div class="input-group col-xl-10 col-lg-9 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.coName) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.coName) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.coNumber) }}
                                </div>
                                <div class="input-group col-xl-3 col-lg-4 col-md-5 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.coNumber) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.coNumber) }}</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 border-1-coOrange rounded mt-2">
                            <div class="row">
                                <div class="col-12 pt-3 pb-3">
                                    <h4 class="coOrange">Logo</h4>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1 mt-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.logo) }}
                                </div>
                                <div class="input-group col-xl-5 col-lg-6 col-md-8 col-sm-12 col-12   mb-2">
                                    {% set logo = '' %}
                                    {% if details %}
                                        {% if details.logo %}
                                            {% set logo = details.logo %}
                                        {% endif %}
                                    {% endif %}
                                    {{ form_widget(form.logo) }}
                                    <div class="input-group-append">
                                        <div class="input-group-text"><span class=" ml-2 fa fa-info-circle fa-1x coOrange" data-toggle="tooltip" data-placement="right" title="JPEG, JPG or PNG images are allowed upto a maximum size of 2MB."></span></div>
                                    </div>
                                </div>
                                <div class="col-md-12 mt-2">
                                    {% if logo != '' %}
                                        <img src="{{ asset('images/'~details.logo)}}" alt="invoice logo" style="width: 20%">
                                    {%  else %}
                                        No Image uploaded yet
                                    {% endif %}
                                </div>
                            </div>
                        </div>

                        <div class="col-12 border-1-coOrange rounded mt-2">
                            <div class="row">
                                <div class="col-12 pt-3 pb-3">
                                    <h4 class="coOrange">Accounts Contact Details</h4>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.addLine1) }}
                                </div>
                                <div class="input-group col-xl-10 col-lg-9 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.addLine1) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.addLine1) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.addLine2) }}
                                </div>
                                <div class="input-group col-xl-10 col-lg-9 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.addLine2) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.addLine2) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.addLine3) }}
                                </div>
                                <div class="input-group col-xl-10 col-lg-9 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.addLine3) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.addLine3) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.addTown) }}
                                </div>
                                <div class="input-group col-xl-10 col-lg-9 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.addTown) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.addTown) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.addCounty) }}
                                </div>
                                <div class="input-group col-xl-10 col-lg-9 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.addCounty) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.addCounty) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.addPostcode) }}
                                </div>
                                <div class="input-group col-xl-10 col-lg-9 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.addPostcode) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.addPostcode) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.email) }}
                                </div>
                                <div class="input-group col-xl-10 col-lg-9 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.email) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.email) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.contactNo) }}
                                </div>
                                <div class="input-group col-xl-4 col-lg-5 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.contactNo) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.contactNo) }}</span>
                                </div>
                            </div>
                            <div class="row pb-1 pb-1">
                                <div class="col-xl-2 col-lg-3 col-md-4 col-sm-12 col-12 inlineLabel">
                                    {{ form_label(form.mobileNo) }}
                                </div>
                                <div class="input-group col-xl-4 col-lg-5 col-md-8 col-sm-12 col-12 mb-2">
                                    {{ form_widget(form.mobileNo) }}
                                </div>
                                <div class="col-md-12 mt-2">
                                    <span class="text-danger">{{ form_errors(form.mobileNo) }}</span>
                                </div>
                            </div>
                        </div>




                        <div class="row pt-5">
                            <div class="col-md-4 ">
                                {{ form_row(form.submit) }}
                            </div>
                        </div>
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
                <!-- END OF COMPANY DETAILS -->
            </div>
        </div>
    </div>
{% endblock %}
{% block pageJavascripts %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
{% endblock %}